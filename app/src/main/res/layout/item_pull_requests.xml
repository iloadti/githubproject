<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_16dp">

    <TextView
        android:id="@+id/item_pull_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_6dp"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/item_pull_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_4dp"
        android:paddingBottom="@dimen/_4dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_pull_name"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/item_pull_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_pull_date"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/item_pull_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_6dp"
        android:paddingBottom="@dimen/_6dp"
        android:text="@string/label_user_mr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_pull_description" />

    <ImageView
        android:id="@+id/item_pull_user_avatar"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:contentDescription="@string/avatar_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_pull_user"
        tools:srcCompat="@drawable/ic_broken_image_black_24dp" />

    <TextView
        android:id="@+id/item_pull_username"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_6dp"
        android:paddingEnd="@dimen/_4dp"
        app:layout_constraintBottom_toBottomOf="@id/item_pull_user_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_pull_user_avatar"
        app:layout_constraintTop_toTopOf="@id/item_pull_user_avatar"
        tools:text="@tools:sample/lorem" />

</androidx.constraintlayout.widget.ConstraintLayout>